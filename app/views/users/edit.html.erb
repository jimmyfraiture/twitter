<div class="col-md-4">
	<%= form_for @user do |f| %>
    <div class="form-group">
    <label>Name</label>
    <%= f.text_field :username, class: "form-control", placeholder: "Entrez un nom" %>
    </div>
    <div class="form-group">
    <label>Email</label>
    <%= f.email_field :mail, class: "form-control", placeholder: "Entrez un mail" %>
    </div>
    <%= f.submit "Save", class: "btn btn-default" %>
	<% end %>
</div>
