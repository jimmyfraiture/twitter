<div class="page-header">
  <div class="col-md-5"> </div>
    <h1>Twitter <small>Users Index <% if user_signed_in? %><%= link_to 'Sign out', destroy_user_session_path, :method => :delete , class: "btn btn-danger" %><% else %><%= link_to 'Sign in', new_user_session_path , class: "btn btn-success" %><% end %></small></h1>
</div>

<div class="container" style="margin-top:10px;">
	<div class="col-md-6" >
		<%= link_to 'Sign up', new_user_registration_path , class: "btn btn-success" %> <%= link_to 'List Home', lists_path, class: "btn btn-info" %>
	</div>
	</br>
	<div class="col-md-12">
		<div class="col-md-8 col-md-offset-3">
			<table class="table table-striped">
				<tr><th>id</th><th>Username</th><th>Email</th><th></th><th></th><th></th></tr>
				<% @users.each do |user| %>
				<tr><td><%= user.id %></td><td><%= user.username %></td><td><%= user.email %></td><td><%= link_to 'Show User', use_path(user) , class: "btn btn-info" %></td><td><% if current_user  == user %> <%= link_to 'Edit your user', edit_user_registration_path(user) , class: "btn btn-warning" %><% end %></td></tr>
				<% end %>
			</table>
		</div>
	</div>
		
</div>


